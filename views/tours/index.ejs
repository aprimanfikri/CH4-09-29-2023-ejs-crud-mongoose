    <h1>Hello FSW2</h1>
    <!-- <p><%= tours %></p> -->
    <table>
      <th>id</th>
      <th>nama</th>
      <th>harga</th>
      <th>rating</th>
      <% tours.forEach((tour)=> { %>
      <tr>
        <td><%= tour.id %></td>
        <td><%= tour.name %></td>
        <td><%= tour.price %></td>
        <td><%= tour.rating %></td>
      </tr>
      <% }) %>
    </table>
    <a href="/dashboard/create">
      <button>Tambah Data Tour Baru</button>
    </a>
